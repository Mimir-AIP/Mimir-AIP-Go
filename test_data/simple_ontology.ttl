@prefix : <http://example.org/ontology#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# Ontology metadata
: a owl:Ontology ;
    rdfs:label "Simple Example Ontology" ;
    rdfs:comment "A simple ontology for testing the Mimir AIP ontology management system" ;
    owl:versionInfo "1.0.0" .

# Classes
:Person a owl:Class ;
    rdfs:label "Person" ;
    rdfs:comment "A human being" .

:Organization a owl:Class ;
    rdfs:label "Organization" ;
    rdfs:comment "A group or company" .

:Document a owl:Class ;
    rdfs:label "Document" ;
    rdfs:comment "A written or digital document" .

:Employee a owl:Class ;
    rdfs:label "Employee" ;
    rdfs:comment "A person who works for an organization" ;
    rdfs:subClassOf :Person .

# Object Properties
:worksFor a owl:ObjectProperty ;
    rdfs:label "works for" ;
    rdfs:comment "Relates a person to the organization they work for" ;
    rdfs:domain :Person ;
    rdfs:range :Organization .

:manages a owl:ObjectProperty ;
    rdfs:label "manages" ;
    rdfs:comment "Relates a person to another person they manage" ;
    rdfs:domain :Person ;
    rdfs:range :Person .

:author a owl:ObjectProperty ;
    rdfs:label "author" ;
    rdfs:comment "Relates a document to its author" ;
    rdfs:domain :Document ;
    rdfs:range :Person .

# Datatype Properties
:hasName a owl:DatatypeProperty ;
    rdfs:label "has name" ;
    rdfs:comment "The name of a person or organization" ;
    rdfs:domain [ a owl:Class ; owl:unionOf ( :Person :Organization ) ] ;
    rdfs:range xsd:string .

:hasEmail a owl:DatatypeProperty ;
    rdfs:label "has email" ;
    rdfs:comment "The email address of a person" ;
    rdfs:domain :Person ;
    rdfs:range xsd:string .

:hasEmployeeCount a owl:DatatypeProperty ;
    rdfs:label "has employee count" ;
    rdfs:comment "The number of employees in an organization" ;
    rdfs:domain :Organization ;
    rdfs:range xsd:integer .

:createdDate a owl:DatatypeProperty ;
    rdfs:label "created date" ;
    rdfs:comment "The date a document was created" ;
    rdfs:domain :Document ;
    rdfs:range xsd:dateTime .

:hasTitle a owl:DatatypeProperty ;
    rdfs:label "has title" ;
    rdfs:comment "The title of a document" ;
    rdfs:domain :Document ;
    rdfs:range xsd:string .
